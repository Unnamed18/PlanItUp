@using PlanItUp.Models.ViewModels

@{
    ViewData["Title"] = "Reservar evento";
}

<style>
    .container {
        max-width: 1200px;
        margin: auto;
        padding: 20px;
        display: flex;
        gap: 20px;
    }

    .filters {
        width: 30%;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #f8f9fa;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

        .filters h2 {
            font-size: 20px;
            margin-bottom: 20px;
        }

        .filters .form-group {
            margin-bottom: 15px;
        }

        .filters label {
            font-weight: bold;
        }

        .filters input, .filters select {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            border-radius: 4px;
            border: 1px solid #ccc;
        }

        .filters .checkbox-group {
            display: flex;
            flex-direction: column;
        }

    .results {
        width: 65%;
    }

    .result-item {
        border: 2px solid #27ae60;
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 15px;
        display: flex;
        justify-content: space-between;
        position: relative;
    }

    .details {
        font-size: 14px;
        line-height: 1.5;
    }

    .actions {
        display: flex;
        flex-direction: column;
        gap: 5px;
    }

    .action-btn {
        background-color: #3498db;
        color: white;
        border: none;
        padding: 5px 10px;
        border-radius: 4px;
        cursor: pointer;
    }

        .action-btn.reserve {
            background-color: #27ae60;
        }
    /* Estilos para el menú desplegable de detalles adicionales */
    .extra-details {
        display: none;
        position: absolute;
        top: 0;
        right: -300px;
        width: 250px;
        padding: 15px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #f8f9fa;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        z-index: 10;
    }

        .extra-details label {
            display: flex;
            align-items: center;
            font-weight: normal;
        }

        .extra-details input[type="checkbox"] {
            margin-right: 8px;
        }
</style>
<button type="submit" class="action-btn" onclick="Reservas()">Mis reservas </button>
<div class="container">
    <!-- Filtros de búsqueda -->
    <div class="filters">
        <h2>Busqueda</h2>

        <div class="form-group">
            <label for="precio">Precio</label>
            <select id="precio">
                <option value="">Seleccione precio</option>
                <option value="1">$0 - $500</option>
                <option value="2">$500 - $1000</option>
                <option value="3">Más de $1000</option>
            </select>
        </div>

        <!-- Nueva característica: Formas de pago -->
        <div class="form-group">
            <label for="formaPago">Forma de Pago</label>
            <select id="formaPago">
                <option value="">Seleccione forma de pago</option>
                <option value="efectivo">Efectivo</option>
                <option value="transferencia">Transferencia</option>
            </select>
        </div>

        <div class="form-group">
            <label for="capacidad">Capacidad (personas)</label>
            <input type="number" id="capacidad" placeholder="Ingrese capacidad">
        </div>

        <div class="form-group checkbox-group">
            <label>Características</label>
            <label><input type="checkbox" value="fumador"> Sector Fumador</label>
            <label><input type="checkbox" value="mascotas"> Admite Mascotas</label>
            <label><input type="checkbox" value="aireLibre"> Aire Libre</label>
            <label><input type="checkbox" value="pileta"> Pileta</label>
            <label><input type="checkbox" value="wifi"> Wi-Fi</label>
        </div>

        <button class="action-btn" onclick="buscarEspacios()">Buscar</button>
    </div>

    <!-- Resultados de la búsqueda -->
    <div class="results" id="resultados">
        <h2>Resultados Disponibles</h2>
        
        <!-- Espacio 1 -->
        <div class="result-item">
            <div class="details">
                <p><strong>Nombre del espacio:</strong> Espacio A</p>
                <p><strong>Precio:</strong> $500</p>
                <p><strong>Forma de pago:</strong> Efectivo</p>
                <p><strong>Teléfono:</strong> 123-456-789</p>
                <p><strong>Dirección:</strong> Calle Falsa 123</p>
                <p><strong>Día del evento:</strong> 12/12/2024</p>
            </div>
            <div class="actions">
                <button class="action-btn reserve">Reservar</button>
                <button class="action-btn" onclick="toggleDetails(this)">+ detalles</button>
            </div>
            <!-- Menú desplegable de detalles adicionales -->
            <div class="extra-details">
                <h3>Características</h3>
                <label><input type="checkbox" checked disabled> Sector Fumador</label>
                <label><input type="checkbox" disabled> Admite Mascotas</label>
                <label><input type="checkbox" checked disabled> Aire Libre</label>
                <label><input type="checkbox" disabled> Pileta</label>
                <label><input type="checkbox" checked disabled> Wi-Fi</label>
            </div>
        </div>
       
        <!-- Espacio 2 -->
        <div class="result-item">
            <div class="details">
                <p><strong>Nombre del espacio:</strong> Espacio B</p>
                <p><strong>Precio:</strong> $750</p>
                <p><strong>Forma de pago:</strong> Transferencia</p>
                <p><strong>Teléfono:</strong> 987-654-321</p>
                <p><strong>Dirección:</strong> Av. Siempre Viva 742</p>
                <p><strong>Día del evento:</strong> 25/12/2024</p>
            </div>
            <div class="actions">
                <button class="action-btn reserve">Reservar</button>
                <button class="action-btn" onclick="toggleDetails(this)">+ detalles</button>
            </div>
            <!-- Menú desplegable de detalles adicionales -->
            <div class="extra-details">
                <h3>Características</h3>
                <label><input type="checkbox" disabled> Sector Fumador</label>
                <label><input type="checkbox" checked disabled> Admite Mascotas</label>
                <label><input type="checkbox" disabled> Aire Libre</label>
                <label><input type="checkbox" checked disabled> Pileta</label>
                <label><input type="checkbox" checked disabled> Wi-Fi</label>
            </div>
        </div>
    </div>
</div>

<script>
    function toggleDetails(button) {
        const detailsContainer = button.closest('.result-item').querySelector('.extra-details');

        if (detailsContainer.style.display === 'block') {
            detailsContainer.style.display = 'none';
            button.textContent = '+ detalles';
        } else {
            detailsContainer.style.display = 'block';
            button.textContent = '- detalles';
        }
    }

    function buscarEspacios() {
        alert("Buscando espacios según los filtros seleccionados...");
    }

    function Reservas() {
         window.location.href = '/Account/MisReservas';       
    }

</script>